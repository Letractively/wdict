<extension engine="1.0">
	<id>bbcode_toolbar</id>
	<title>BBCode Toolbar</title>
	<version>1.3.2</version>
	<description>This extension adds buttons for easy insertion of BBCode.</description>
	<author>Quy NGUYEN-DAI (vnpenguin@vnoss.org)</author>
	<minversion>1.3 Beta</minversion>
	<maxtestedon>1.3 Beta</maxtestedon>
	<install>
		<![CDATA[
		]]>
	</install>
	<uninstall>
		<![CDATA[
		]]>
	</uninstall>
	<hooks>
	    <hook id="hd_head"><![CDATA[
		$forum_head[] = '<script type="text/javascript" src="'.$ext_info['url'].'/bbcode_toolbar.js"></script>';
		$forum_head[] = '<link rel="stylesheet" type="text/css" medira="screen" href="'.$ext_info['url'].'/bbcode_toolbar.css" />';
	    ]]></hook>
		<hook id="po_pre_post_contents"><![CDATA[
		require_once $ext_info['path'].'/bbcode_toolbar.php';
		show_bbcode_toolbar (++$forum_page['fld_count']);
		]]></hook>

	    <hook id="vt_quickpost_pre_message_box"><![CDATA[
		require_once $ext_info['path'].'/bbcode_toolbar.php';
		show_bbcode_toolbar (1);
		//show_bbcode_toolbar (++$forum_page['fld_count']);
	    ]]></hook>

	    <hook id="ed_pre_message_box"><![CDATA[
		require_once $ext_info['path'].'/bbcode_toolbar.php';
		show_bbcode_toolbar (++$forum_page['fld_count']);
	    ]]></hook>

		<hook id="pf_change_details_signature_pre_fieldset"><![CDATA[
		require_once $ext_info['path'].'/bbcode_toolbar.php';
		show_bbcode_toolbar (++$forum_page['fld_count']);
	    ]]></hook>

	    <hook id="pf_change_details_signature_fieldset_start"><![CDATA[
		require_once $ext_info['path'].'/bbcode_toolbar.php';
		show_bbcode_toolbar (++$forum_page['fld_count']);
	    ]]></hook>
	</hooks>
</extension>
